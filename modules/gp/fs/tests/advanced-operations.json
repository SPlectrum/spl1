{
    "name": "Advanced filesystem operations",
    "description": "Tests directory operations, file manipulation, and search functionality",
    "tags": ["integration", "fs", "advanced"],
    "tests": [
        {
            "name": "list directory contents",
            "description": "Test listing files and directories in app data boundary",
            "action": "gp/fs/list",
            "params": {
                "path": "."
            },
            "expect": {
                "workspace": "contains 'list'",
                "history": "contains 'Listed'",
                "error": "none"
            }
        },
        {
            "name": "copy file",
            "description": "Test copying a file to a new location",
            "action": "gp/fs/copy",
            "params": {
                "from": "test.txt",
                "to": "test-copy.txt"
            },
            "expect": {
                "workspace": "contains 'copy'",
                "history": "contains 'Copied'",
                "error": "none"
            }
        },
        {
            "name": "move file",
            "description": "Test moving/renaming a file",
            "action": "gp/fs/move",
            "params": {
                "from": "test-copy.txt",
                "to": "test-moved.txt"
            },
            "expect": {
                "workspace": "contains 'move'",
                "history": "contains 'Moved'",
                "error": "none"
            }
        },
        {
            "name": "create directory",
            "description": "Test creating a new directory",
            "action": "gp/fs/mkdir",
            "params": {
                "path": "test-dir"
            },
            "expect": {
                "workspace": "contains 'mkdir'",
                "history": "contains 'Created directory'",
                "error": "none"
            }
        },
        {
            "name": "find files by pattern",
            "description": "Test finding files matching a pattern",
            "action": "gp/fs/find",
            "params": {
                "pattern": "*.txt",
                "path": "."
            },
            "expect": {
                "workspace": "contains 'find'",
                "history": "contains 'Found'",
                "error": "none"
            }
        }
    ]
}